<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="8dp"
    android:background="@drawable/image_view_bg_shimmer"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="16dp"
    android:padding="15dp">


    <View
        android:id="@+id/movie_image_id"
        android:layout_width="100dp"
        android:layout_height="140dp"
        android:layout_marginStart="10dp"
        android:background="@color/greyClaro"
        android:foregroundGravity="center" />

    <View
        android:id="@+id/movie_title_id"
        android:layout_width="238dp"
        android:layout_height="17dp"
        android:layout_alignTop="@+id/movie_image_id"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/movie_image_id"
        android:background="@color/greyClaro" />

    <View
        android:id="@+id/movie_year_id"
        android:layout_width="match_parent"
        android:layout_height="17dp"
        android:layout_below="@+id/movie_title_id"
        android:layout_alignStart="@+id/movie_title_id"
        android:layout_marginTop="1dp"
        android:background="@color/greyClaro" />

    <View
        android:id="@+id/movie_type_id"
        android:layout_height="17dp"
        android:layout_width="match_parent"
        android:layout_below="@+id/movie_year_id"
        android:layout_alignStart="@+id/movie_title_id"
        android:layout_marginTop="1dp"
        android:background="@color/greyClaro" />

    <View
        android:id="@+id/favorite"
        android:layout_width="140dp"
        android:layout_marginTop="5dp"
        android:layout_height="50dp"
        android:layout_below="@id/movie_type_id"
        android:layout_alignParentEnd="true"
        android:background="@color/greyClaro"
        android:padding="10dp"
        android:textColor="@color/white" />

</RelativeLayout>