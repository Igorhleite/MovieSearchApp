<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/movie_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:padding="15dp"
        android:background="@drawable/image_view_bg">

        <ImageView
            android:layout_marginStart="10dp"
            android:id="@+id/movie_image_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foregroundGravity="center"
/>

        <TextView
            android:id="@+id/movie_title_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/movie_image_id"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/movie_image_id"
            android:text="Titulo Default"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/movie_year_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/movie_title_id"
            android:layout_alignStart="@+id/movie_title_id"
            android:singleLine="true"
            android:text="Year Default"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/movie_type_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/movie_year_id"
            android:layout_alignStart="@+id/movie_title_id"
            android:singleLine="true"
            android:text="Type Default"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/search_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="5dp"
            android:padding="10dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/ic_favorite"
            android:background="@drawable/favorite_shape"
            android:tint="@color/white" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>